{
  "firestore": {
    "rules": "firebase-dev/firestore.rules",
    "indexes": "firebase-dev/firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "functions": {
      "port": 5001
    }
  },
  "storage": {
    "rules": "firebase-dev/storage.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}
